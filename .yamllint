extends: default

ignore:
  - '.git/**'
  - 'target/**'
  - 'node_modules/**'
  - '.github/workflows/release.yml'

rules:
  document-start: disable
  truthy: disable

  indentation:
    spaces: 2
    indent-sequences: true

  line-length:
    max: 120
    level: warning
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true
